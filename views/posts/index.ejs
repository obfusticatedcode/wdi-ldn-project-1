

  <div class="columns is-multiline">

    <% posts.forEach((post) => { %>
    <div class="column is-4">
      <a href="/posts/<%= post.id %>">
      <img src="<%= post.imageSRC %>" alt="<%=  %>">
      </a>

      <h3><%= post.title %></h3>
      <h3><%= post.description %></h3>
      <h3>Location: <%= post.location %></h3>

      <p>
        <% while(post.stars--) { %> &star; <% } %>
      </p>

    </div>

    <% }) %>

</div>
