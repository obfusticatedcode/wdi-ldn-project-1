<div class="column">
  <% if (user.image) { %>
    <img src="<%= user.imageSRC %>" alt="<%= user.username %>">
  <% } %>
  <h1 class="title"><%= user.username %></h1>
  <form method="POST" action="/users/<%= user.id %>">
    <a href="/users/<%= user.id %>/edit" class="button">Edit Account</a>
    <input type="hidden" name="_method" value="DELETE">
    <button class="button is-danger">Delete Account</button>
  </form>
</div>
<div class="column">
  <div class="box">
    <%= user %>
  </div>
</div>
